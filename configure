#!/bin/sh -e
srcdir=${SRCDIR:-$(dirname "$0")}

eval ". $srcdir/config.sh"

boson() {
	genrules boson \
		src/getopt_long.c \
		src/hash_table.c \
		src/log.c \
		src/ninja.c \
		src/options.c \
		src/object.c \
		src/builtin.c \
		src/interpreter.c \
		src/ast.c \
		src/token.c \
		src/lexer.c \
		src/parser.c \
		src/setup.c \
		src/main.c
}

all="boson"

run_configure 0.0.1
