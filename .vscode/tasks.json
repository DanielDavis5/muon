{
  "tasks": [
    {
      "label": "configure",
      "type": "shell",
      "command": "muon setup builddir",
      "group": "build"
    },
    {
      "label": "build",
      "type": "cppbuild",
      "command": "/usr/bin/ninja",
      "args": ["-C", "${workspaceFolder}/builddir"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
